<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mentora" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="bottomNavigationStyle">@style/Widget.Mentora.BottomNavigationView</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Custom style for BottomNavigationView -->
    <style name="Widget.Mentora.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <!-- Background of the bar -->
        <item name="backgroundTint">@color/surface</item>
        <!-- Icon color -->
        <item name="itemIconTint">@color/bottom_nav_icon_color</item>
        <!-- Text color -->
        <item name="itemTextColor">@color/bottom_nav_icon_color</item>
    </style>
</resources>